<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Category : "
        android:textSize="25sp"
        android:textColor="#000"
        android:id="@+id/tv_quiz_category"
        android:freezesText="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scores : 0"
                        android:textSize="25sp"
                        android:textColor="#000"
                        android:id="@+id/tv_score_board"
                        android:freezesText="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 0/x"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:id="@+id/tv_number_of_question"
                    android:freezesText="true"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:padding="20dp"
                android:layout_gravity="right"
                android:textSize="35sp"
                android:textColor="#000"
                android:id="@+id/tv_time_remaining"
                android:freezesText="true"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is one of the Question"
                android:textSize="20sp"
                android:id="@+id/tv_question"
                android:freezesText="true"/>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/button_group">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Options 1"
                    android:id="@+id/button_option_1"
                    android:freezesText="true"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Options 2"
                android:id="@+id/button_option_2"
                android:freezesText="true"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Options 3"
                android:id="@+id/button_option_3"
                android:freezesText="true"/>
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit | Next Question"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:id="@+id/button_submit_next"
            android:freezesText="true"/>

    </LinearLayout>



</LinearLayout>